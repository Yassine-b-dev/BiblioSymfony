{% extends 'base.html.twig' %}

{% block title %}Liste Livres{% endblock %}

{% block h1 %}Liste des livres{% endblock %}

{% block body %}
    <table class="table table-bordered table-striped">
        <thead class="thead-dark">
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Auteur</th>
                <th>Couverture</th>
                <th>Actions</th>
            </tr>
        </thead>

        <tbody>
            {% for livre in livres %}
                <tr>
                    <td>{{ livre.id }}</td>
                    <td>{{ livre.titre }}</td>
                    <td>{{ livre.auteur }}</td>
                    <td>
                    {% if livre.couverture is not null %}
                        <img class="image_liste" src="{{ asset("img/") ~ livre.couverture }}" alt="Image de couverture">
                    {% endif %}
                    </td>

                    <td>
                        <a href="{{ path("livre_modifier", {"id": livre.id }) }}">Modifier  <i class="fa fa-edit"></i></a><br>
                        <a href="{{ path("livre_supprimer", {"id": livre.id }) }}">Supprimer  <i class="fa fa-trash"></i></a><br>
                        <a href="{{ path("livre_voir", {"id": livre.id }) }}">Voir  <i class="fa fa-book"></i></a><br>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

{% endblock %}
